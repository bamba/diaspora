[
<% for convo in @conversations %>
  {
    "id" : <%= convo.id %>,
    "author": {
      "id": <%= convo.author.id %>,
      "name": "<%= escape_javascript(convo.author.name) %>",
      "avatar": "<%= convo.author.profile.image_url %>"
    },
    "gist": "<%= escape_javascript(convo.messages.last.text[0..80]+"...") %>",
    "messageCount": <%= convo.messages.size %>,
    "date": "<%= convo.created_at %>"
  }
  <% unless @conversations.last == convo %>
    <%="," %>
  <% end %>
<% end %>
]
